<%= render 'shared/page_title', title: "All Chefs" %>

<ul class="nav nav-tabs">
  <li role="presentation"> <%= link_to "Recipes", recipes_path %></li>
  <li role="presentation" class="active"><%= link_to "chefs", chefs_path %></li>
</ul>

<div class="row">
  <div class="col-lg-6">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-lg-2 pull-left">
      <%= link_to gravatar_for(chef, size: 150), chef_path(chef) %>
      <p>
        <h5>Chef name: <%= chef.chefname %></h5> 
      </p>
    </div>
    <div class=" col-lg-8 col-lg-offset-2">
      Want highest rated recipe here
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-6 pull-right">
    <%= will_paginate %>
  </div>
</div>