              </div>
          </div>
          <div class="nav-item navbar-right">
            <div class="btn btn-default", id="btn-dark">
              <i class="glyphicon glyphicon-user"></i> <%= link_to "Sign-Up", login_path, class:"btn btn-default", id:"btn-dark"%>
