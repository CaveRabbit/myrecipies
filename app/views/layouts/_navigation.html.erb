      <div class="collapse navbar-collapse">
        <div class="nav_item">
          <%=link_to "Recipes", recipes_path, class:"btn btn-default", id:"btn-dark"%>
        </div>
      
        <% if logged_in? %>
        <div class="nav_item navbar-right">
          <%=link_to "New Recipe", new_recipe_path, class:"btn btn-default", id:"btn-dark"%>
        </div>
      
        <ul class="nav_item right-align navbar-right">
          <li class="dropdown">
            <%= link_to "#", class: "btn btn-default dropdown-toggle", id:"btn-dark", "data-toggle" => "dropdown" do %>
